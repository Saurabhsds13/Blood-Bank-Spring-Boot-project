package com.AEL.bloodbank.controller;

import org.springframework.validation.annotation.Validated;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

import com.AEL.bloodbank.dao.Blood_UnitsDAO;
import com.AEL.bloodbank.model.Blood_Units;

@RestController
@RequestMapping("/")
public class Blood_UnitsController {
		
	Blood_UnitsDAO blood_unitsdao;
	
	@PostMapping("/blood_unit")
	public Blood_Units createBloodUnit(@Validated @RequestBody Blood_Units blood_unit) {
		return blood_unitsdao.save(bloof_unit);
	}

}
